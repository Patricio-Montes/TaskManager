<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Gestión de Tareas </title>
    @Styles.Render("~/Content/css")

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">

</head>
<body>

    <!-- Menu -->
    <div class="Menu">
        <div class="item" onclick="location.href='@Url.Action("Index", "Tasks")'">
            <i class="fas fa-fw fa-user-circle"></i> Dashboard
        </div>
        <div class="item" onclick="location.href='@Url.Action("AllTasks", "Tasks")'">
            <i class="fas fa-fw fa-th" ></i> Listado
        </div>

    </div>
    <!-- /Menu -->
    <!-- Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        @Html.ActionLink("Gestión de Tareas", "Index", "Tasks", new { area = "" }, new { @class = "navbar-brand" })
    </nav>
    <!-- /Navbar -->

    <br />

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- Footer -->
    <footer class="page-footer font-small bg-dark">
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            <i class="fab fa-github"></i>
            <a href="https://github.com/Patricio-Montes/TaskManager" target="_blank"> Git Repo </a>
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Scripts")

    @RenderSection("scripts", required: false)
</body>

</html>
